<h1>List of photos</h1>

<form action="/add_photo">
  <label for="image">Image</label>
  <input id="image" name="image" type="text" placeholder="Enter a url for the image">

  <label for="caption">Caption</label>
  <textarea id="caption" name="caption" placeholder="Enter a caption for the photo"></textarea>

  <label for="owner_id">Owner ID</label>
  <input id="owner_id" name="owner_id" type="text" placeholder="Enter an ID of the User">

  <button>Add photo</button>
</form>

<hr>

<table border="1">
  <tr>
    <th>Image</th>
    <th>Caption</th>
    <th>Owner</th>
    <th>Posted</th>
    <th></th>
  </tr>

  <% @photos.each do |photo| %>
    <tr>
      <td> <img src="<%= photo.image %>" alt="photos"></td>
      <td><%= photo.caption %></td>
      <td><%= photo.poster.username %></td>
      <td><%= photo.created_at %></td>
      <td><a href="/photos/<%= photo.id %>">Show details</a></td>
    </tr>
  <% end %>
</table>
