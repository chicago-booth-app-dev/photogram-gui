<h1><%= @user.username %></h1>

<dl>
  <dt>ID</dt>
  <dd><%= @user.id %></dd>

  <dt>Edit user</dt>
  <dd></dd>
</dl>

<h2>Own photos (<%= @user.own_photos.count %>)</h2>
<table border="1">
  <tr>
    <th>Image</th>
    <th>Owner</th>
    <th>Caption</th>
    <th>Posted</th>
    <th></th>
  </tr>

  <% @user.own_photos.each do |photo| %>
    <tr>
      <td><img src="<%= photo.image %>" alt="photo"></td>
      <td><%= photo.poster.username %></td>
      <td><%= photo.caption %></td>
      <td><%= photo.poster.created_at %></td>
      <td><a href="/">Show details</a></td>
    </tr>
  <% end %>
</table>
